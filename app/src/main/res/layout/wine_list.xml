            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/outsideTextView1"
            app:layout_constraintTop_toBottomOf="@+id/threeDollarTextView1" />

        <TextView
            android:id="@+id/threeDollarTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="$2.50"
            android:textColor="@android:color/white"
