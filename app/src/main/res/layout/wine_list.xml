            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="83dp"
            app:layout_constraintBottom_toBottomOf="@+id/outsideTextView1"
            app:layout_constraintEnd_toEndOf="@+id/descriptionEditText1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/active_icons_line2" />

        <TextView
            android:id="@+id/bestPriceTextView1"
            android:layout_width="31dp"
            android:layout_height="21dp"
            android:text="BEST PRICE"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/organeSquareImageView1"
            app:layout_constraintEnd_toEndOf="@+id/organeSquareImageView1"
            app:layout_constraintStart_toStartOf="@+id/organeSquareImageView1"
            app:layout_constraintTop_toTopOf="@+id/organeSquareImageView1" />
