<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.75"
    android:background="@drawable/restaurant_3"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="100dp"
        android:layout_gravity="center"
        android:src="@drawable/restaurant_logo1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/active_icons_line2"
            android:drawableTop="@drawable/menu_icon"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:text="Menu"
            android:padding="20dp"
             />

        <Button

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/active_icons_line2"
            android:drawableTop="@drawable/news_icon"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:text="Menu"
            android:padding="20dp"
            />
        <Button

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/active_icons_line2"
            android:drawableTop="@drawable/movies_icon"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:text="Menu"
            android:padding="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/active_icons_line2"
            android:drawableTop="@drawable/feedback_icon"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:text="Menu"
            android:padding="20dp"
            />

        <Button

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/active_icons_line2"
            android:drawableTop="@drawable/booking_icon"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:text="Menu"
            android:padding="20dp"
            />
        <Button

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/active_icons_line2"
            android:drawableTop="@drawable/contact_icon"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center"
            android:text="Menu"
            android:padding="20dp"
            />
    </LinearLayout>
</LinearLayout>